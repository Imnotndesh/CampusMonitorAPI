# .env.example

# =======================================
# Server Configuration
# =======================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SHUTDOWN_TIMEOUT=15s
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
MAX_HEADER_BYTES=1048576

# =======================================
# Database Configuration (Required)
# =======================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=campus_admin
DB_PASSWORD=campus_secure_2024
DB_NAME=campus_monitor
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# =======================================
# MQTT Configuration (Required)
# =======================================
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_CLIENT_ID=campus-backend
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TELEMETRY_TOPIC=campus/probes/telemetry
MQTT_COMMAND_TOPIC=campus/probes/+/cmd
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_KEEP_ALIVE=60s
MQTT_CONNECT_TIMEOUT=10s
MQTT_AUTO_RECONNECT=true

# =======================================
# Security Configuration
# =======================================
JWT_SECRET=campus_monitor_secret_change_in_production
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
RATE_LIMIT_PER_MINUTE=100
ENABLE_RATE_LIMIT=true

# =======================================
# Logging Configuration
# =======================================
LOG_LEVEL=info
LOG_MODE=normal
LOG_FILE_PATH=logs/campus-monitor.log
LOG_USE_COLORS=true